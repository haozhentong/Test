/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/* 每一首歌 */
.item{
  width: 100%;
  height: 45px;
  display: flex;
  cursor: pointer;
}
.index {
  width: 10%;
  text-align: center;
  padding: 5px;
}
.index:hover{
  color: red;
}
.rightView {
  flex:1;
  /* flex-grow:1; */
  padding: 5px;
  border-bottom: 1px solid #ddd;
}
