/* pages/recommend/recommend.wxss */
.container{
    width: 100%;
    height: 100%;
    border-top: 1rpx solid #eee;
    box-sizing: border-box;
}
.recommend{
    width: 100%;
   
    display: block;
    border-bottom: 1rpx solid #eee;
}
.recommend image{
    width: 300rpx;
    height: 300rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    
}
.recommend .content{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color:#000;
    font-size: 26rpx;
    font-weight: bold;
    margin-bottom: 100rpx;

}


