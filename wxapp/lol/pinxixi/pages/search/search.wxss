/* pages/search/search.wxss */

page{
    background: #f5f5f5;
}
.container {
    /* position: relative; */
    width: 100%;
    height: 100%;
    background-color: #fff;
    color: #939393;
}
.searchBar{
    width: 100%;
    height: 100%;
    margin-top: 4px;
    background: #fff;
    
    
}
.searchBar .searchBar-text{
    
    width:700rpx;
    height: 50rpx;
    text-align: center;
    border: 4rpx solid #e8e8e8;
    background-color: #eeeeee;
    border-radius: 10rpx solid #eeeeee;
    vertical-align: middle;
    justify-content: center;
    margin: auto;
    font-size: 24rpx;
    line-height: 50rpx;
    color: #000;
    /* margin-bottom: 10rpx; */
    border-bottom: 4rpx solid #e8e8e8;
 
}
.category {
    border-top: 4rpx solid #e8e8e8;
  
    text-align: left;
    display: block;
   
}
.scroll-view-left {
    position: absolute;
    left: 0;
    width: 25%;
    height: 100%;
    background-color: #eee;
    font-size: 24rpx;
    
}
.nav_left {
    display: inline-block;
}
.nav_left_items.cur{
    background: #ffffff;
    color: red;
    border-left: 4rpx solid red;
}
.scroll-view-left view {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}
.scroll-view-right {
    position: absolute;
   
    right: 0;
    display: inline-block;
    width: 75%;
    height: 100%;
    padding: 10rpx;
    box-sizing: border-box;
    background: #ffffff;
}
.scroll-view-right .nav_right .nav_right_items {
    float: left;
    width: 33.3%;
    height: 120rpx;
    text-align: center;
}
.scroll-view-right .nav_right .nav_right_items image{
    width: 40rpx;
    height: 40rpx;
}
.scroll-view-right .nav_right .nav_right_items text {
    display: inline-block;
    overflow: hidden;
    font-size: 20rpx;
    color: #000;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

